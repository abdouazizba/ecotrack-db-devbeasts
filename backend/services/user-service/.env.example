# ============================================
# EcoTrack User Service - Environment Config
# ============================================
# Copy this file to .env and update with your values

# ============================================
# Application Environment & Server
# ============================================
NODE_ENV=development
SERVER_PORT=0005

# ============================================
# Database Configuration
# ============================================
# For Docker Compose: use service name (user-db)
# For Local Development: use localhost
DB_HOST=user-db
DB_PORT=1111
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=ecotrack_user

# ============================================
# Inter-Service Communication
# ============================================
# URL for Auth Service (for JWT verification and credential creation)
# For Docker Compose: use service name (http://auth-service:3001)
# For Local Development: use localhost (http://localhost:3001)
AUTH_SERVICE_URL=http://auth-service:3001

# ============================================
# CORS Configuration (Optional)
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=*

# ============================================
# Logging Configuration
# ============================================
# Options: error, warn, info, debug
LOG_LEVEL=debug
