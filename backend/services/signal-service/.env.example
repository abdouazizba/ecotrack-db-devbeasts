# ============================================
# EcoTrack Signal Service - Environment Config
# ============================================
# Copy this file to .env and update with your values

# ============================================
# Application Environment
# ============================================
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================
# For Docker Compose: use service name (signal-db)
# For Local Development: use localhost
DB_HOST=signal-db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=ecotrack_signal
DB_NAME_TEST=ecotrack_signal_test

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=3004

# ============================================
# Inter-Service Communication
# ============================================
# URL for Auth Service (for JWT verification)
# For Docker Compose: use service name (http://auth-service:3001)
# For Local Development: use localhost (http://localhost:3001)
AUTH_SERVICE_URL=http://auth-service:3001

# URL for Container Service
# For Docker Compose: use service name (http://container-service:3002)
# For Local Development: use localhost (http://localhost:3002)
CONTAINER_SERVICE_URL=http://container-service:3002

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins or * for all
CORS_ORIGIN=*

# ============================================
# Logging Configuration
# ============================================
# Options: error, warn, info, debug
LOG_LEVEL=debug
